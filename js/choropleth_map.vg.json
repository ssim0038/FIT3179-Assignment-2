{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": "Top YouTube Channels by Country",
  "width": "container",
  "height": 450,
  "background": "#fcfdfd",
    "params": [
    {
      "name": "subThreshold",
      "value": 0,
      "bind": {
        "input": "select",
        "options": [0, 100000000, 200000000, 300000000, 500000000],
        "labels": ["Show all", " >100M", " >200M", " >300M", " >500M"],
        "name": "Minimum no. of Subscribers: ",
        "element": "#map-filter-controls"
      }
    }
  ],
  "projection": { "type": "equalEarth"},

  "data": {
    "url": "data/youtubers_df.csv"
  },

  "transform": [
    {
      "aggregate": [
        { "op": "count", "field": "Username", "as": "channels_count" },
        { "op": "sum",   "field": "Subscribers", "as": "total_subscribers" }
      ],
      "groupby": ["ISO-3"]
    },
    {
      "lookup": "ISO-3",
      "from": {
        "data": {
          "url": "data/ne_110m_admin_0_countries.topojson",
          "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
        },
        "key": "properties.ADM0_A3"
      },
      "as": "geo"
    },
    {
      "calculate": "datum.geo && datum.geo.properties ? datum.geo.properties.ADMIN : null",
      "as": "Country"
    }
  ],

  "layer": [
    {
      "data": {
        "url": "data/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "#e0e0e0", "stroke": "#ffffff", "strokeWidth": 0.5 }
    },
    {
      "transform": [
        { "filter": "isValid(datum.total_subscribers) && datum.total_subscribers >= subThreshold" }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "channels_count",
          "type": "quantitative",
          "title": "Channels",
          "scale": {
            "type": "threshold",
            "domain": [1, 10, 30, 50, 100, 200, 300],
            "scheme": { "name": "reds", "count": 8 }
          }
        },
        "tooltip": [
          { "field": "Country", "title": "Country" },
          { "field": "channels_count", "title": "Channels" },
          { "field": "total_subscribers", "title": "Total subscribers", "format": ",.0f" }
        ]
      }
    },
    { "mark": { "type": "geoshape", "fillOpacity": 0, "stroke": "#999", "strokeWidth": 0.4 } }
  ]
}
